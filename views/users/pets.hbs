{{#if _id}}
<section class="mainpets"> 
<h2 class="Pet-headline">Pets</h2>
<p>This is your pets page my friend!</p>
<div class="btn-add">
  <a href="/pet-add">Add your pet</a>
</div>

{{else}}
<p>Still no logged in user, sorry!</p>
{{/if}}

{{#each pets}}
<h1>{{this.name}}</h1>
<a href="/pets/{{this._id}}" class="edit-button">DETAILS</a>
<a href="/pets/delete/{{this._id}}" class="edit-button">DELETE</a>
{{/each}}
</section> 
